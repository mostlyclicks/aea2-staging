<p id="notice"><%= notice %></p>

<div class="row">
  <div class="span7">
    <div class="row-fluid">
      <div class="offset1 span11">
        <div class="span8">
          <h1><%= @asset.name %></h1>
          <small><%= @asset.created_at.strftime('%B, %e %Y')%></small><br />
          <%= @asset.description.html_safe %>
          <br />
          <% if @asset.aea_file? %>
            <%= image_tag @asset.aea_file_url(:thumb) %><br />
            <%= link_to 'Download', @asset.aea_file_url %>
          <% end %>
                <p><%= link_to 'Edit', edit_asset_path(@asset) %> |
                <%= link_to 'Back', assets_path %></p>
</p>

        </div>
        <div class="span3">
          
          <ul id="assets" style="padding-top:72px;">
          <% @pr_assets.each do |pr| %>
            <li><%= link_to pr.name, pr.aea_file_url, target: '_blank' %></li>
          <% end %>
        </ul>
        </div>

      </div>

    </div>


  </div>
</div>















<% @categories.each do |category| %>
  <% content_for :sb_box do %>
          <%= pr_category(category) %>
  <% end %>
<% end %>


