<div class="show_content">

<%= form_for(@category) do |f| %>
  <% if @category.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@category.errors.count, "error") %> prohibited this category from being saved:</h2>

      <ul>
      <% @category.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, class: 'span6' %>
  </div>
  <div class="field">
    <%= f.label :excerpt %><br />
    <%= f.text_area :excerpt, class: 'span6',  rows: '10' %>
  </div>

  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description, class: 'span6',  rows: '10' %>
  </div>

 <div>
     <label class="radio">
       <%= f.radio_button(:layout, "float") %>
       Float right - assets will appear to the right
     </label>
 
     <label class="radio">
       <%= f.radio_button(:layout, "no float") %>
       Inline - Assets will appear inline
     </label>
 </div>

 <br/><br/>


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

</div>
